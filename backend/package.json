{
  "name": "petcare-backend",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --watch src --exec node src/index.js",
    "migrate": "node src/utils/runMigrations.js || echo 'add migration runner'",
    "worker": "node src/jobs/scheduler.js",
    "dev:all": "concurrently \"npm run dev\" \"npm --prefix ../frontend run dev\"",
    "build:frontend": "npm --prefix ../frontend install && npm --prefix ../frontend run build",
    "render-build": "npm --prefix ../frontend install && npm --prefix ../frontend run build && npm install"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bullmq": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-validator": "^6.14.3",
    "firebase-admin": "^11.10.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.0",
    "petcare-monorepo": "file:..",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.0"
  }
}
